{
   int ra;
   double n1, n2, n3, media, me;
   printf("Informe o RA do aluno:");
   scanf("%d", &ra);
   printf("Informe as tres notas do aluno:");
   scanf("%lf %lf %lf", &n1, &n2, &n3);
   printf("Informe a media dos exercicios:");
   scanf("%lf", &me);
   media = (n1 + n2*2 + n3*3 + me) /7;
   printf("RA: %d\n", ra);
   printf("Notas: %.2lf, %.2lf\n, %.2lf\n", n1, n2, n3);
   printf("Media dos exercicios: %.2lf\n", me);
   printf("Media Final: %.2lf\n", media);
   if(media >= 60){
        printf("Aluno aprovado!\n");
       if (media >=90){
    printf("Conceito A.\n");

   }
   else if (media >= 75 && media < 90){
    printf("Conceito B.\n");

   }
   printf("Conceito C.\n");
   }

else{
        printf("Aluno reprovado! \n");
if(media >= 40 && media < 60){
        printf("Conceito D.\n");
  }
   else{
    printf("Conceito E.\n");
    }
  }

   return 0;
}


