exerc 3

int main()
{
    int total, opcao, branco = 0, tinto = 0, rose = 0;
    char ocpcao;
    printf("Informeo vinho:");
    scanf("%c", &opcao);
    while (opcao != 'f')
    {
        switch (opcao){
    case 'B':{
    ++ branco;
    break;
    }
    case 'T':{
        ++tinto;
        break;
    }
    case 'F':{
        printf("Opcao invalida!\n");
        break;
    }
        }
        printf("Informe o vinho:");
        scanf("%c", &opcao);
    }
    total = branco + tinto + rose;
    printf("Total de vinhos: %d\n", total);
    printf("Total de vinhos brancos: %d\n", branco);
    printf("Total de vinhos tintos: %d\n", tinto);
    printf("total de vinhos rose: %d\n", rose);

    return 0;

}


