exercicio 1

#include <stdio.h>



int main() {

  int vetor[8];

  int i;



  for (i = 0; i < 8; i++) {

    printf("Digite o valor %d: ", i + 1);

    scanf("%d", &vetor[i]);

  }



  printf("\nElementos na ordem inversa:\n");

  for (i = 7; i >= 0; i--) {

    printf("%d ", vetor[i]);

  }



  return 0;

}

exercicio 2

#include <stdio.h>



int main() {

  float notas[5];

  int pesos[5] = {1, 2, 3, 4, 5};

  float somaNotas = 0, somaPesos = 0;

  int i;



  for (i = 0; i < 5; i++) {

    printf("Digite a nota %d: ", i + 1);

    scanf("%f", &notas[i]);

    somaNotas += notas[i] * pesos[i];

    somaPesos += pesos[i];

  }



  printf("\nMédia ponderada = %.2f\n", somaNotas / somaPesos);



  return 0;

}

exercicio 3

#include <stdio.h>



int main() {

  int matriz[3][3];

  int i, j;



  for (i = 0; i < 3; i++) {

    for (j = 0; j < 3; j++) {

      printf("Digite o elemento [%d][%d]: ", i, j);

      scanf("%d", &matriz[i][j]);

    }

  }



  printf("\nDiagonal principal:\n");

  for (i = 0; i < 3; i++) {

    printf("%d ", matriz[i][i]);

  }



  return 0;

}

exercicio 4

#include <stdio.h>



int main() {

  int matriz[4][5];

  int i, j, soma = 0;



  for (i = 0; i < 4; i++) {

    for (j = 0; j < 5; j++) {

      printf("Digite o elemento [%d][%d]: ", i, j);

      scanf("%d", &matriz[i][j]);

    }

  }



  for (j = 0; j < 5; j++) {

    soma += matriz[2][j]; // linha 3 (índice 2)

  }



  printf("\nSoma da terceira linha = %d\n", soma);



  return 0;

}

exercicio 5

#include <stdio.h>

#include <string.h>



int main() {

  char frase[50];

  int i, cont = 0;



  printf("Digite uma frase: ");

  fgets(frase, 50, stdin);



  for (i = 0; frase[i] != '\0'; i++) {

    char c = frase[i];

    if (c == 'a' || c == 'A' ||

      c == 'e' || c == 'E' ||

      c == 'i' || c == 'I' ||

      c == 'o' || c == 'O' ||

      c == 'u' || c == 'U') {

      cont++;

    }

  }



  printf("Número total de vogais: %d\n", cont);



  return 0;

}

exercicio 6

#include <stdio.h>



int main() {

  int matriz[5][5];

  int i, j, cont = 0;



  for (i = 0; i < 5; i++) {

    for (j = 0; j < 5; j++) {

      printf("Digite o elemento [%d][%d]: ", i, j);

      scanf("%d", &matriz[i][j]);

      if (matriz[i][j] > 10)

        cont++;

    }

  }



  printf("\nMatriz completa:\n");

  for (i = 0; i < 5; i++) {

    for (j = 0; j < 5; j++) {

      printf("%3d ", matriz[i][j]);

    }

    printf("\n");

  }



  printf("\nTotal de elementos maiores que 10: %d\n", cont);



  return 0;

}

exercicio 7

#include <stdio.h>



int main() {

  int VetorA[6], VetorB[6], VetorC[12];

  int i, j = 0;



  printf("Preencha o VetorA:\n");

  for (i = 0; i < 6; i++) {

    printf("A[%d]: ", i);

    scanf("%d", &VetorA[i]);

  }



  printf("\nPreencha o VetorB:\n");

  for (i = 0; i < 6; i++) {

    printf("B[%d]: ", i);

    scanf("%d", &VetorB[i]);

  }



  for (i = 0; i < 6; i++) {

    VetorC[j++] = VetorA[i];

    VetorC[j++] = VetorB[i];

  }



  printf("\nVetorC (intercalado):\n");

  for (i = 0; i < 12; i++) {

    printf("%d ", VetorC[i]);

  }



  return 0;

}

exercicio 8

#include <stdio.h>



int main() {

  char nomes[5][20];

  int i;



  for (i = 0; i < 5; i++) {

    printf("Digite o nome do usuário %d: ", i + 1);

    fgets(nomes[i], 20, stdin);

  }



  printf("\nNomes cadastrados:\n");

  for (i = 0; i < 5; i++) {

    printf("%s", nomes[i]);

  }



  return 0;

}

exercicio 9

#include <stdio.h>



void dobrar_valores(int vetor[], int tamanho) {

  for (int i = 0; i < tamanho; i++) {

    vetor[i] *= 2;

  }

}



int main() {

  int vetor[5];



  for (int i = 0; i < 5; i++) {

    printf("Digite o valor %d: ", i + 1);

    scanf("%d", &vetor[i]);

  }



  dobrar_valores(vetor, 5);



  printf("\nVetor após dobrar os valores:\n");

  for (int i = 0; i < 5; i++) {

    printf("%d ", vetor[i]);

  }



  return 0;

}

EXERCICIO 10



#include <stdio.h>

#include <stdlib.h>

#include <time.h>



#define N 5000 



int main() {

  static int matriz[N][N]; 

  long long soma;

  clock_t inicio, fim;

  double tempo_optimizado, tempo_nao_optimizado;



 

  printf("Inicializando matriz %dx%d...\n", N, N);

  for (int i = 0; i < N; i++) {

    for (int j = 0; j < N; j++) {

      matriz[i][j] = (i + j) % 100;

    }

  }

METODO A

printf("\nSomando com acesso OTIMIZADO (linha -> coluna)...\n");

  inicio = clock();

  soma = 0;

  for (int i = 0; i < N; i++) {

    for (int j = 0; j < N; j++) {

      soma += matriz[i][j];

    }

  }

  fim = clock();

  tempo_optimizado = ((double)(fim - inicio)) / CLOCKS_PER_SEC;

  printf("Soma = %lld | Tempo = %.4f segundos\n", soma, tempo_optimizado);



METODO B

printf("\nSomando com acesso NÃO OTIMIZADO (coluna -> linha)...\n");

  inicio = clock();

  soma = 0;

  for (int j = 0; j < N; j++) {

    for (int i = 0; i < N; i++) {

      soma += matriz[i][j];

    }

  }

  fim = clock();

  tempo_nao_optimizado = ((double)(fim - inicio)) / CLOCKS_PER_SEC;

  printf("Soma = %lld | Tempo = %.4f segundos\n", soma, tempo_nao_optimizado);



  printf("\n============================================\n");

  printf("Tempo otimizado   : %.4f s\n", tempo_optimizado);

  printf("Tempo não otimizado : %.4f s\n", tempo_nao_optimizado);

  printf("Ganho de desempenho : %.2fx mais rápido\n",

      tempo_nao_optimizado / tempo_optimizado);

  printf("============================================\n");



  return 0;

}
